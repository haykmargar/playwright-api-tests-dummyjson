{
  "name": "dummyjson-api-taf",
  "version": "1.0.0",
  "description": "API test suite in TypeScript using Playwright to validate Products endpoints in DummyJSON.",
  "homepage": "https://github.com/haykmargar/playwright-api-tests-dummyjson#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haykmargar/playwright-api-tests-dummyjson.git"
  },
  "license": "ISC",
  "author": "Hayk Margaryan",
  "scripts": {
    "test": "npx playwright test",
    "test:smoke": "npx playwright test --grep '@smoke'",
    "test:positive": "npx playwright test --grep '@positive'",
    "test:negative": "npx playwright test --grep '@negative'",
    "report": "npx playwright show-report",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.4.1",
    "prettier": "^3.7.4",
    "typescript": "^5.3.0",
    "zod": "^4.3.6"
  }
}
